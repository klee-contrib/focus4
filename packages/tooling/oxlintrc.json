{
    "plugins": ["eslint", "jsx-a11y", "oxc", "react", "unicorn"],
    "categories": {
        "correctness": "warn",
        "pedantic": "warn",
        "restriction": "warn",
        "suspicious": "warn",
        "style": "warn"
    },
    "rules": {
        "eslint/func-style": "off",
        "eslint/guard-for-in": "off",
        "eslint/id-length": "off",
        "eslint/init-declarations": "off",
        "eslint/max-classes-per-file": "off",
        "eslint/max-depth": "off",
        "eslint/max-lines": "off",
        "eslint/max-lines-per-function": "off",
        "eslint/max-nested-callbacks": "off",
        "eslint/max-params": "off",
        "eslint/no-bitwise": "off",
        "eslint/no-console": ["warn", {"allow": ["info", "warn", "error"]}],
        "eslint/no-continue": "off",
        "eslint/no-else-return": "off",
        "eslint/no-inner-declarations": "off",
        "eslint/no-magic-numbers": "off",
        "eslint/no-negated-condition": "off",
        "eslint/no-nested-ternary": "off",
        "eslint/no-param-reassign": "off",
        "eslint/no-plusplus": "off",
        "eslint/no-prototype-builtins": "off",
        "eslint/no-ternary": "off",
        "eslint/no-undefined": "off",
        "eslint/no-unexpected-multiline": "off",
        "eslint/prefer-destructuring": [
            "warn",
            {
                "VariableDeclarator": {"array": false, "object": true},
                "AssignmentExpression": {"array": false, "object": false}
            }
        ],
        "eslint/radix": "off",
        "eslint/require-await": "off",
        "eslint/sort-imports": ["warn", {"ignoreDeclarationSort": true, "ignoreCase": true}],
        "eslint/sort-keys": "off",
        "eslint/yoda": "off",
        "jsx_a11y/aria-activedescendant-has-tabindex": "off",
        "oxc/no-async-await": "off",
        "oxc/no-optional-chaining": "off",
        "oxc/no-rest-spread-properties": "off",
        "react/exhaustive-deps": "off",
        "react/only-export-components": "off",
        "react/jsx-filename-extension": "off",
        "react/jsx-handler-names": "off",
        "react/jsx-no-target-blank": "off",
        "react/no-unescaped-entities": "off",
        "react/react-in-jsx-scope": "off",
        "react/rules-of-hooks": "off",
        "unicorn/consistent-function-scoping": "off",
        "unicorn/explicit-length-check": "off",
        "unicorn/filename-case": ["warn", {"case": "kebabCase", "ignore": ".stories.tsx"}],
        "unicorn/no-array-callback-reference": "off",
        "unicorn/no-array-method-this-argument": "off",
        "unicorn/no-array-reduce": "off",
        "unicorn/no-array-reverse": "off",
        "unicorn/no-array-sort": "off",
        "unicorn/no-await-expression-member": "off",
        "unicorn/no-lonely-if": "off",
        "unicorn/no-nested-ternary": "off",
        "unicorn/no-null": "off",
        "unicorn/no-useless-undefined": "off",
        "unicorn/prefer-global-this": "off",
        "unicorn/prefer-object-from-entries": "off",
        "unicorn/prefer-native-coercion-functions": "off",
        "unicorn/prefer-top-level-await": "off",
        "unicorn/switch-case-braces": ["warn", "avoid"]
    }
}
