    "scripts": {
        "bootstrap": "lerna bootstrap",
        "clean": "lerna clean --yes && node clean.js",
        "start-ci": "tsc --noEmit | sed -E 's|(.+)\\((.+),(.+)\\): (\\w+) (.+): (.+)|\\#\\#vso[task.logissue type=\\4;sourcepath='$PWD'/\\1;linenumber=\\2;columnnumber=\\3;code=\\5]\\6|g' 1>&2",
        "stylelint": "stylelint packages/**/*.css",
        "test": "jest --reporters=default",
        "test-ci": "jest --ci --reporters=default --reporters=jest-junit",
        "tslint": "tslint --project tsconfig.json --force | sed 's|WARNING: .*/src/|Warning: src/|g'",
        "tslint-ci": "tslint --project tsconfig.json --force | sed -E 's|(.+): (.+):(.+):(.+) - (.+)|\\#\\#vso[task.logissue type=\\L\\1\\E;sourcepath=\\2;linenumber=\\3;columnnumber=\\4;]\\5|g'"
    },
    "devDependencies": {
        "@types/enzyme": "3.9.3",
        "@types/jest": "24.0.13",
        "@types/react-test-renderer": "16.8.1",
        "enzyme": "3.10.0",
        "enzyme-adapter-react-16": "1.14.0",
        "enzyme-to-json": "3.3.5",
        "identity-obj-proxy": "3.0.0",
        "jest": "24.8.0",
        "jest-enzyme": "7.0.2",
        "jest-junit": "6.4.0",
        "lerna": "3.14.1",
        "postcss-import": "12.0.1",
        "react-test-renderer": "16.8.6",
        "rollup": "1.14.5",
        "rollup-plugin-copy-glob": "0.3.0",
        "rollup-plugin-postcss-modules": "2.0.1",
        "rollup-plugin-typescript2": "0.21.1",
        "stylelint": "10.1.0",
        "ts-jest": "24.0.2",
        "tslint": "5.17.0",
        "typescript": "3.5.1",
        "typescript-tslint-plugin": "0.4.0"
    }
}
