{
    "compilerOptions": {
        // Général
        "lib": ["es2018", "dom"],
        "jsx": "react",
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",

        // Options obligatoires
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "strict": true,

        // Options additionnelles
        "importHelpers": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        // Spécifique librairie
        "declaration": true,
        "inlineSourceMap": true,
        "outDir": "dist",
        "stripInternal": true
    },
    "exclude": [
        "dist",
        "node_modules",
        "./src/**/__test__/*"
    ]
}