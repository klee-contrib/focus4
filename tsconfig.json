{
    "compilerOptions": {
        // Général
        "lib": ["es2022", "dom"],
        "jsx": "react-jsx",
        "module": "esnext",
        "moduleResolution": "bundler",
        "target": "es2022",
        "strict": true,

        // Options additionnelles
        "importHelpers": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        // Spécifique librairie
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "stripInternal": true,
        "noEmitOnError": true
    },
    "exclude": ["**/lib/**", "**/__tests__/**", "node_modules"]
}
